            <view class="products-item" bindtap="onProductsItemTap" data-id="{{item.goods_id}}">
                <image class="products-image" src="{{item.image}}" mode="aspectFill"></image>
                <view class="products-item-bottom">
                    <text class="name">{{item.name}}</text>
                    <view class="price">ï¿¥{{item.price}}</view>
                </view>
            </view>
        </block>
    </view>
</template>