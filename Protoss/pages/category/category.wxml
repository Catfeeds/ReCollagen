<import src="../tpls/category/category-tpl.wxml"/>
<view class="container category-container">
  <view class="category-box">
    <scroll-view scroll-y="true" class="left-box">
      <block wx:for="{{categoryTypeArr}}">
        <view class="menu-item {{currentMenuIndex==index?'selected':''}}" data-id="{{item.id}}" data-index="{{index}}" bindtap="changeCategory">
          {{item.name}}
        </view>
      </block>
    </scroll-view>
    <view class="right-box">  
      <scroll-view scroll-y="true" class="foods-type-box">
          <template is="categorydetail" data="{{categoryInfo:categoryInfo}}"/>
      </scroll-view>
    </view>
  </view>
  <loading hidden="{{loadingHidden}}">
    加载中...
  </loading>
</view>