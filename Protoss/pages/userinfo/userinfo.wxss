@import "../tpls/base.wxss";

form{
    display: block;
    margin-top: 20rpx;
}
.section{
    display: flex;
    border-bottom:1rpx solid #E9E9E9;
    margin-left:30rpx;
    margin-right:30rpx;
    align-items: center;
}
.section input{
    flex: 1;
    font-size: 32rpx;
    color:#333;
    padding: 20rpx 0;
}
.title-box{
    font-size: 28rpx;
    padding: 20rpx 0;
    margin-right:10rpx;
    white-space:nowrap;
}
.view-box{
    flex: 1;
    font-size: 28rpx;
    padding: 20rpx 0;
    color:#7C7C7C;
    text-align: right;
    padding-right: 10px;
}
.IDcode_pic{
  padding-top: 23rpx;
  border-bottom:0;
}
.IDcode_pic image {
  height: 30vh;
}
.submit-btn{
    color: #fff;
    line-height:3;
    font-size:28rpx;
    margin: 30rpx;
    background-color: #00a1e9;
}
.submit-btn.disabled{
    background-color: #dedede;
}