@import "../tpls/base.wxss";

.collect-container{
    background-color: #fff;
}
.collect-box{
    overflow-x: hidden;
    margin-bottom: 92rpx;
    font-size: 28rpx;
}
.collect-item{
    display: flex;
    padding:20rpx;
    background-color: #fff;
    border-bottom:1rpx solid #D0D0D7;
    height: 186rpx;
}
.collect-item>view{
    height: 100%;
}
.collect-item-main{
    width: 100%;
    display: flex;
}
.collect-item-img{
    width:186rpx;
    height: 100%;
    background-color: #F5F6F5;
    border-radius: 4rpx;
    position: relative;
}
.collect-item-img image{
    width: 100%;
    height: 100%;
}
.collect-item-word{
    display: flex;
    flex: 1;
    flex-direction:column;
    justify-content:space-between;
    padding: 8rpx 0;
    margin:0 20rpx;
    box-sizing: border-box;
    color: #454553;
}
.title-box{
    display: flex;
    justify-content:space-between;
}
.bottom-box{
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 21rpx;
}
.cart-item-counts{
    width:220rpx;
    display: flex;
    justify-content: space-between;
    text-align: center;
}
.cart-item-counts>view{
    display: flex;
    justify-content: center;
    align-items: center;
}
.cart-item-counts .counts{
    color: #454553;
    font-size: 24rpx;
    padding-top:12rpx;
    box-sizing: border-box;
}
.delete{
    display: flex;
    height: 45rpx;
    line-height: 45rpx;
    color: #75bb0b;
    font-size: 28rpx;
    padding: 0 26rpx;
    border-radius: 28rpx;
    border:1rpx solid #75bb0b;
    justify-content: space-between;
}